{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run Demo",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--framework",
				"net8.0"
			],
			"options": {
				"cwd": "${workspaceFolder}/demo"
			},
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}