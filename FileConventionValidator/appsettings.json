{
    "FileConventionSettings": {
        "InputDirectory": "C:\\source\\FileConventionValidator\\TestFiles\\Input",
        "ReadyDirectory": "C:\\source\\FileConventionValidator\\TestFiles\\Ready",
        "ReviewDirectory": "C:\\source\\FileConventionValidator\\TestFiles\\Review",
        "CreateDirectories": true,
        "ProcessSubdirectories": false,
        "FileExtensions": [
            ".txt",
            ".csv",
            ".xml",
            ".json"
        ],
        "NamingConventions": [
            {
                "Name": "Document Convention",
                "Pattern": "^DOC_[0-9]{4}_[0-9]{3}$",
                "Description": "Format: DOC_YYYY_NNN",
                "Examples": [
                    "DOC_2024_001",
                    "DOC_2024_999"
                ]
            },
            {
                "Name": "Report Convention",
                "Pattern": "^RPT_[0-9]{4}_[A-Z0-9_]+$",
                "Description": "Format: RPT_YYYY_DESCRIPTION",
                "Examples": [
                    "RPT_2024_Q1_SALES",
                    "RPT_2024_ANNUAL_REPORT"
                ]
            }
        ],
        "ValidationSettings": {
            "CaseSensitive": false,
            "AllowSpaces": false,
            "MaxFileNameLength": 255,
            "MinFileNameLength": 3
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    }
}